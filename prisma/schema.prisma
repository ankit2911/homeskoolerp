generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(cuid())
  email          String          @unique
  password       String
  name           String?
  role           String          @default("STUDENT")
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  notifications  Notification[]
  studentProfile StudentProfile?
  teacherProfile TeacherProfile?
}

model StudentProfile {
  id               String           @id @default(cuid())
  userId           String           @unique
  firstName        String?
  lastName         String?
  rollNumber       String?          @unique
  dateOfBirth      DateTime?
  gender           String?
  fatherName       String?
  motherName       String?
  emergencyContact String?
  parentPhone      String?
  studentEmail     String?
  studentPhone     String?
  alternateEmail   String?
  alternatePhone   String?
  address          String?
  previousSchool   String?
  academicYear     String?          @default("2025-26")
  classId          String?
  status           String?          @default("ACTIVE")
  adminComments    String?
  attendance       Attendance[]
  class            Class?           @relation(fields: [classId], references: [id])
  user             User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  subjects         StudentSubject[]
}

model TeacherProfile {
  id                   String              @id @default(cuid())
  userId               String              @unique
  firstName            String?
  lastName             String?
  phoneCode            String?
  phoneNumber          String?
  qualification        String?
  experience           Int?
  specialization       String?
  classes              String?
  previousInstitutions String?
  licenseNumber        String?
  allocations          TeacherAllocation[]
  sessions             Session[]
  sessionLogs          SessionLog[]
  user                 User                @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Board {
  id      String  @id @default(cuid())
  name    String  @unique
  classes Class[]
}

model Class {
  id          String              @id @default(cuid())
  name        String
  section     String?
  boardId     String
  board       Board               @relation(fields: [boardId], references: [id])
  resources   Resource[]
  sessions    Session[]
  students    StudentProfile[]
  subjects    Subject[]
  allocations TeacherAllocation[]
}

model SubjectMaster {
  id       String    @id @default(cuid())
  name     String    @unique
  code     String    @unique
  category String?   @default("primary")
  isActive Boolean   @default(true)
  subjects Subject[]
}

model Subject {
  id              String              @id @default(cuid())
  name            String
  subjectMasterId String?
  classId         String
  chapters        Chapter[]
  resources       Resource[]
  sessions        Session[]
  class           Class               @relation(fields: [classId], references: [id], onDelete: Cascade)
  subjectMaster   SubjectMaster?      @relation(fields: [subjectMasterId], references: [id])
  allocations     TeacherAllocation[]
  students        StudentSubject[]
}

model StudentSubject {
  id        String         @id @default(cuid())
  studentId String
  subjectId String
  student   StudentProfile @relation(fields: [studentId], references: [id], onDelete: Cascade)
  subject   Subject        @relation(fields: [subjectId], references: [id], onDelete: Cascade)

  @@unique([studentId, subjectId])
}

model Chapter {
  id        String    @id @default(cuid())
  name      String
  subjectId String
  subject   Subject   @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  sessions  Session[]
  topics    Topic[]
}

model Topic {
  id          String     @id @default(cuid())
  name        String
  description String?
  chapterId   String
  sessions    Session[]
  chapter     Chapter    @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  resources   Resource[]
}

model TeacherAllocation {
  id        String         @id @default(cuid())
  teacherId String
  classId   String
  subjectId String
  subject   Subject        @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  class     Class          @relation(fields: [classId], references: [id], onDelete: Cascade)
  teacher   TeacherProfile @relation(fields: [teacherId], references: [id], onDelete: Cascade)

  @@unique([teacherId, classId, subjectId])
}

model Session {
  id          String       @id @default(cuid())
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  status      String       @default("SCHEDULED") // SCHEDULED, IN_PROGRESS, PENDING_LOG, COMPLETED, CANCELLED
  classId     String
  subjectId   String
  chapterId   String?
  topicId     String?
  teacherId   String?
  attendance  Attendance[]
  sessionLog  SessionLog?
  topic       Topic?       @relation(fields: [topicId], references: [id])
  chapter     Chapter?     @relation(fields: [chapterId], references: [id])
  subject     Subject      @relation(fields: [subjectId], references: [id])
  class       Class        @relation(fields: [classId], references: [id])
  teacher     TeacherProfile? @relation(fields: [teacherId], references: [id])
}

model SessionLog {
  id            String         @id @default(cuid())
  sessionId     String         @unique
  teacherId     String
  topicsCovered String         // Topics covered during session
  homework      String?        // Homework assigned
  studentNotes  String?        // Notes about student performance
  challenges    String?        // Teaching challenges faced
  nextSteps     String?        // Planned next steps
  attachments   String?        // Comma-separated file URLs
  createdAt     DateTime       @default(now())
  session       Session        @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  teacher       TeacherProfile @relation(fields: [teacherId], references: [id])
}

model Attendance {
  id        String         @id @default(cuid())
  date      DateTime       @default(now())
  status    String
  sessionId String
  studentId String
  student   StudentProfile @relation(fields: [studentId], references: [id])
  session   Session        @relation(fields: [sessionId], references: [id])
}

model Resource {
  id          String         @id @default(cuid())
  title       String
  description String?
  type        String
  classId     String
  subjectId   String
  topicId     String?
  createdAt   DateTime       @default(now())
  subject     Subject        @relation(fields: [subjectId], references: [id])
  class       Class          @relation(fields: [classId], references: [id])
  topic       Topic?         @relation(fields: [topicId], references: [id])
  files       ResourceFile[]
}

model ResourceFile {
  id          String   @id @default(cuid())
  resourceId  String
  fileType    String
  url         String
  fileName    String?
  fileSize    Int?
  createdAt   DateTime @default(now())
  resource    Resource @relation(fields: [resourceId], references: [id], onDelete: Cascade)
}

model Notification {
  id        String   @id @default(cuid())
  message   String
  userId    String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
